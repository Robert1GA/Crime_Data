<div class="container">
  <h2 class="chi-blue">Log-in Page</h2>
  <h4>Or <a href="/auth/signup">Signup</a> if you do not have an account</h4>
  <form action-"/auth/login" method="POST">
    <div class="form-group">
      <label for="authEmail">Email</label>
      <input id="authEmail" class="form-control" type="email" name="email">
    </div>

    <div class="form-group">
      <label for="authPassword">Password</label>
      <input id="authPassword" class="form-control" type="password" name="password">
    </div>

    <input class="btn btn-primary" type="submit" value="Login">
  </form>

  <hr>
  <a href="/auth/facebook" class="btn btn-primary">
    Login via Facebook
  </a>
</div>
