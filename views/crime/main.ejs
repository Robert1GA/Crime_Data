<div class="container">

  <h1>Enter an address to start</h1>

  <form action="/crime/address" method="POST">
    <div class="form-group">
      <input type="text" class="form-control" name="name" placeholder="Name (example: Home, Work) [optional]">
    </div>
    <div class="form-group">
      <input type="text" class="form-control" name="address" placeholder="Chicago Address">
    </div>
    <input type="submit" class="btn btn-primary">
  </form>
  <a href="/crime/show">Go straight to map overview</a>
</div>
