<div class="container">
  <div class="well">
    <h3>You are currently logged in as: </h3>
    <h4 class="indent">Name: <%= user.name %> </h4>
    <h4 class="indent">Email: <%= user.email %> </h4>

    <h3>Saved Addresses</h3>
    <% user.addresses.forEach(function(address) { %>
    <div>
      <a href="/general/address/<%=address.id%>/edit">
        <img src="/images/edit-icon.png" class="small-icon">
      </a>
      <a href="/general/address/<%=address.id%>" class="delete-link">
        <img src="/images/delete-icon.png" class="small-icon">
      </a>
      <span><%= address.address %></span>
    </div>
    <% }); %>
  </div>
  <a href="/crime/show">Go back to the map</a>
</div>
