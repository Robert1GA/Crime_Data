<div class="container">
  <div class="well">
    <h3>You are currently logged in as: </h3>
    <h4 class="indent">Name: <%= user.name %> </h4>
    <h4 class="indent">Email: <%= user.email %> </h4>

    <h3>Saved Addresses</h3>
    <% user.addresses.forEach(function(address) { %>
    <div>
      <img src="/images/edit-icon.png" class="small-icon">
      <a href="/general/address/<%=address.id%>" class="delete-link">
        <img src="/images/delete-icon.png" class="small-icon">
      </a>
      <span><%= address.address %></span>
    </div>
    <% }); %>
  </div>
  <form action="/crime/address" method="POST">
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" class="form-control edit-form" name="name">
    </div>
    <div class="form-group">
      <label for="address">Address</label>
      <input type="text" class="form-control edit-form" name="address">
    </div>
    <input id="submit" type="submit" class="btn btn-primary" value="Re-Save">
  </form>
</div>
