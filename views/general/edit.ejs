<div class="container">
  <form action="/general/address/<%=addresses.id%>" class="edit-form" method="PUT">
  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" class="form-control" name="name" value="<%= addresses.name %>">
  </div>
  <div class="form-group">
    <label for="address">Address</label>
    <input type="text" class="form-control" name="address" value="<%= addresses.address %>">
  </div>
  <input id="submit" type="submit" class="btn btn-primary" value="Re-Save">
  </form>
</div>
